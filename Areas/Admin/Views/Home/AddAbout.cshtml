@model dotMVC.Data.about

@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Thêm tin tức</h2>

    <form action="@Url.Action("AddAboutAction")" method="POST">
        <div class="form-group">
            <label for="tieude">Tiêu đề:</label>
            <input type="text" class="form-control" name="tieude" id="tieude" required />
        </div>
        <div class="form-group">
            <label for="noidung">Nội dung:</label>
            <textarea class="form-control" name="noidung" id="noidung" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" id="submitBtn">Thêm</button>
    </form>

    <div class="mt-3 text-center">
        @Html.ActionLink("Quay về", "About", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("noidung");
    </script>
}
<link href="~/Areas/Admin/Content/CSS/StyleSheet2.css" rel="stylesheet" />
