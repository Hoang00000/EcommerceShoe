<div class="container">
    @{

        ViewBag.Title = "Edit";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
        var Loai = ((List<dotMVC.Data.loai>)ViewData["Loai"]).ToList();
    }
    @model IEnumerable<dotMVC.Data.hanghoa>

    <h2 class="text-center">Chỉnh sửa sản phẩm</h2>

    @foreach (var product in Model)
    {
        <form action="@Url.Action("EditAction")" method="GET" class="mt-4">
            <input type="hidden" name="mahh" value="@product.mahh" />
            <div class="form-group">
                <label for="tenhh">Tên sản phẩm:</label>
                <input type="text" name="tenhh" value="@product.tenhh" class="form-control" />
            </div>
            


            <div class="form-group">
                <label for="maloai">Loại sản phẩm:</label>
                <select name="maloai" id="maloai" class="form-control">
                    @foreach (var loai in Loai)
                    {
                        <option value="@loai.maloai" @(loai.maloai == product.maloai ? "selected" : "")>@loai.tenloai</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="mota">Mô tả:</label>
                <textarea name="mota" id="mota" rows="5" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
        <div class="mt-3 text-center">
            <a href="@Url.Action("Danhmucsanpham")" class="btn btn-secondary">Back to List</a>
        </div>
    }

    @section Scripts
    {
        <script>
            CKEDITOR.replace("mota");
        </script>
    }
</div>
