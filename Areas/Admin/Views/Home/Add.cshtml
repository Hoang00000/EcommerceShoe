@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Loai = ((List<dotMVC.Data.loai>)ViewData["Loai"]).ToList();
}

<h2 class="text-center mt-5">Thêm mới sản phẩm</h2>
<div class="container">
    <form action="@Url.Action("AddAction")" method="GET" class="mt-4">
        <div class="form-group">
            <label for="tenhh">Tên sản phẩm:</label>
            <input type="text" name="tenhh" id="tenhh" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="maloai">Loại sản phẩm:</label>
            <select name="maloai" id="maloai" class="form-control" required>
                <option value="" disabled selected>Chọn loại</option>
                @foreach (var loai in Loai)
                {
                    if (@loai.loai1.ToString() == "0")
                    {
                        <option value="@loai.maloai">@loai.tenloai</option>
                    }
                    else
                    {
                        <option value="@loai.maloai" hidden>@loai.tenloai</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="mota">Mô tả:</label>
            <textarea name="mota" id="mota" rows="5" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    </form>
    <div class="mt-3 text-center">
        <a href="@Url.Action("Danhmucsanpham")" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts
{
    <script>
        CKEDITOR.replace("mota");
    </script>
}
