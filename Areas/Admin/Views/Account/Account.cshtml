@model IEnumerable<dotMVC.Data.AspNetUser>

@{
    ViewBag.Title = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Danh sách khách hàng</h2>

<div class="container mt-4">
    <p>
        @Html.ActionLink("Thêm mới", "AddAccount", null, new { @class = "btn btn-primary mb-3" })
    </p>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Avatar</th>
                <th>Tên khách hàng</th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Image)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>
                        <button class="btn btn-warning btn-sm mr-1" onclick="location.href='@Url.Action("Edit", "ControllerName", new { id = item.Id })'">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Delete", "ControllerName", new { id = item.Id })'">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
