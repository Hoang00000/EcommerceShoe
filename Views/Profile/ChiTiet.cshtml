@model dotMVC.Models.HoaDonViewModel

@{
    ViewBag.Title = "ChiTiet";
}
<div class="container">
            <a href="@Url.Action("DonHang","Profile")" class="btn btn-secondary mt-2">Quay Lại</a>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã hóa đơn</th>
                <th>Sản phẩm mua <br /> màu - size - số lượng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.MaSoHD</td>
                <td>
                    @{ var i = 1; }
                    @foreach (var sp in Model.SanPham)
                    {
                        <div>@i. @sp.TenHH <br /> Màu: @sp.MauSac - Size: @sp.Size - Số lượng: @sp.SoLuongMua</div>
                        i++;
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => Model.NgayDat)</td>
                <td>@string.Format("{0:#,##0} đ", Model.TongTien)</td>
            </tr>
        </tbody>
    </table>
</div>