@{
    ViewBag.Title = "Số lượt xem của sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .container {
        max-width: 1000px;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 30px;
    }

    .chart-container {
        position: relative;
        height: 600px; /* Điều chỉnh chiều cao của biểu đồ */
        width: 100%;
        margin: 0 auto;
    }

    #viewChart {
        width: 100%;
        height: 100%;
    }
</style>
<body>
    <div class="container">
        <h2>Số lượt xem của sản phẩm</h2>
        <div class="chart-container">
            <canvas id="viewChart"></canvas>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script>
        $(document).ready(function () {
            var hanghoaData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.HangHoaData));

            var labels = hanghoaData.map(function (item) {
                return item.tenhh;
            });

            var data = hanghoaData.map(function (item) {
                return item.soluotxem;
            });

            var ctx = document.getElementById('viewChart').getContext('2d');
            var viewChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Số lượt xem',
                        data: data,
                        backgroundColor: 'rgba(169, 169, 169, 0.8)', // Màu xám
                        borderColor: 'rgba(169, 169, 169, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    animation: {
                        duration: 1500,
                        easing: 'easeInOutQuart'
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true,
                                fontSize: 16,
                                fontColor: '#555' // Màu sắc của chữ số trên trục y
                            },
                            gridLines: {
                                color: 'rgba(0, 0, 0, 0.1)'
                            }
                        }],
                        xAxes: [{
                            ticks: {
                                fontSize: 16,
                                fontColor: '#555' // Màu sắc của chữ số trên trục x
                            },
                            gridLines: {
                                display: false
                            }
                        }]
                    },
                    legend: {
display: false
                    },
                    tooltips: {
                        enabled: true,
                        mode: 'index',
                        position: 'nearest',
                        backgroundColor: '#fff',
                        titleFontColor: '#333',
                        bodyFontColor: '#666',
                        titleFontSize: 14,
                        bodyFontSize: 14,
                        borderColor: '#ddd',
                        borderWidth: 1,
                        caretPadding: 10
                    },
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });
    </script>
</body>